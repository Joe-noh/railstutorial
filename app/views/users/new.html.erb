<% provide(:title, t('.title')) %>
<h1><%= t('.title') %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= render 'fields', f: f %>
      <%= f.submit t('.submit'), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
